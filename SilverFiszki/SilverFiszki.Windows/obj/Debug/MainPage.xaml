<Page
    x:Class="SilverFiszki.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SilverFiszki"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/wallpaper.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*" />
            <RowDefinition Height="15*"/>
            <RowDefinition Height="28*" />
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Image Source="Assets/IconPNG.png" Margin="40"/>
        <TextBlock Grid.Row="1" HorizontalAlignment="Center" Padding="30" FontSize="40">
            Wybierz język, z którego zamierzasz rozpocząć naukę:
        </TextBlock>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:ConnectionId='1' Grid.Column="0" FontSize="40" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                                             BorderThickness="0" Style="{StaticResource ButtonUniversal}">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/Flaga/angielski.png"/>
                </Button.Background>          
            </Button>
            <Button x:ConnectionId='2' Grid.Column="1" FontSize="40" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                              BorderThickness="0" Style="{StaticResource ButtonPolski}">
                <Button.Background>
                    <ImageBrush Stretch="Fill" ImageSource="Assets/polski.png"/>
                </Button.Background>
            </Button>
            
        </Grid>
    </Grid>
</Page>

