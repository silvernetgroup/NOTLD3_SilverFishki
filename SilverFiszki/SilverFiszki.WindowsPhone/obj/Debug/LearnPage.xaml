<Page
    x:Class="SilverFiszki.LearnPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SilverFiszki"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/wallpaper.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="90*"/>
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="10*"  />
            <RowDefinition Height="30*" />
            <RowDefinition Height="30*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>

        <!-- Main Image -->
        <Image 
            Grid.Row="2" 
            Grid.Column="1" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            Name="MainImage" 
            Source="Assets/Data/6.png"/>

        <!-- Back button -->
        <Button x:ConnectionId='1' 
            x:Name="backButton"  
            Width="135" 
            Height="30" 
            Style="{StaticResource ButtonBack}"
            Grid.Column="1" 
            Grid.Row="1"
            BorderThickness="0"
            VerticalAlignment="Top"
            AutomationProperties.Name="Back"
            AutomationProperties.AutomationId="BackButton"
            AutomationProperties.ItemType="Navigation Button"
                                    />

        <!-- textblock - Zegar -->
        <TextBlock 
            Name="TimerTextBlock" 
            Grid.Row="1" Grid.Column="1" 
            Text="0:00" 
            FontSize="40" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Right" 
            Width="150" 
            TextAlignment="Center"  />

        <!-- Textblock - Opis -->
        <TextBlock 
            Name="Opis" 
            Grid.Row="3" 
            Grid.Column="1" 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            FontSize="25" 
            TextAlignment="Center" 
            TextWrapping="Wrap"/>

        <!-- Układ przycisków -->
        <Grid 
            Grid.Row="4" 
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="30*"/>
                <RowDefinition Height="60*"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0*"/>
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="50*"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>

            <!-- Textblock - ZnamCount -->
            <TextBlock 
                Name="ZnamCount" 
                Text="00"
                Grid.Row="1" 
                Grid.Column="1" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                FontSize="25" 
                TextAlignment="Center" 
                TextWrapping="Wrap"/>

            <!-- Textblock - NieZnamCount -->
            <TextBlock 
                Name="NieZnamCount" 
                Text="00"
                Grid.Row="1" 
                Grid.Column="3" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" 
                FontSize="25" 
                TextAlignment="Center" 
                TextWrapping="Wrap"/>

            <!-- Button Znam -->
            <Button x:ConnectionId='2' 
                Name="ButtonZnam" 
                Grid.Column="1" 
                Grid.Row="2" 
                                         
                Margin="-3"
                Style="{StaticResource ButtonZnam}"
                Background="#FF007957"
                BorderBrush="#FF0A8537">
                <TextBlock 
                    Name="ZnamCounter" 
                    Text="Znam" 
                    FontSize="25" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    SelectionHighlightColor="White"/>
            </Button>

            <!-- Button Nie Znam -->
            <Button x:ConnectionId='3' 
                Name="ButtonNieznam" 
                Grid.Column="3" 
                Grid.Row="2" 
                Margin="-3"
                                            
                Style="{StaticResource ButtonNieZnam}">
                <TextBlock 
                    Name="NieZnamCounter" 
                    Text="Nie Znam" 
                    FontSize="25" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    SelectionHighlightColor="White"/>
            </Button>
        </Grid>
    </Grid>
</Page>

